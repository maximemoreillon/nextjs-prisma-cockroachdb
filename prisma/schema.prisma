generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}


model Item {
  id          BigInt   @id @default(sequence())
  createdAt   DateTime @default(now())
  name        String
  description String?
}
